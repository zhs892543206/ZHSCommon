<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/module_fastindex_header_rly"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_height"
        android:orientation="horizontal">
        <com.zhs.commonhelper.widget.autotext.AutofitTextView
            android:id="@+id/module_fastindex_headerleft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:textColor="@color/black"
            android:textSize="@dimen/normal_txtsize"
            android:padding="@dimen/widget_padding"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/search"/>
        <com.zhs.commonhelper.widget.autotext.AutofitTextView
            android:id="@+id/module_fastindex_headerright"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:descendantFocusability="blocksDescendants"
            android:textColor="@color/black_nofoucs"
            android:textSize="@dimen/normal_txtsize"
            android:padding="@dimen/widget_padding"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:text="@string/cancel"
            />
            <com.zhs.commonhelper.widget.fastsearch.searchedt.SearchEditText
                android:id="@+id/module_fastindex_searchedt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/module_fastindex_headerright"
                android:layout_toRightOf="@id/module_fastindex_headerleft"
                android:background="@drawable/search_edt_bg"
                android:hint="@string/search_condition"
                android:textSize="@dimen/normal_txtsize"
                android:layout_marginTop="@dimen/widget_padding"
                android:layout_marginBottom="@dimen/widget_padding"
                android:padding="@dimen/widget_margin"
                android:imeOptions="actionSearch"
                android:singleLine="true" /><!--想让imeOptions有效需要加singline为true-->
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/search_bg">
            <View
                android:id="@+id/module_fastindex_header_shadow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_left_padding"
                android:background="@drawable/signinhis_shadow"
                android:visibility="gone"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/module_fastindex_searchrv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="24dp"
                />
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fillViewport="true"

                android:layout_alignParentRight="true"
                android:layout_below="@id/module_fastindex_header_shadow"
                android:layout_marginBottom="@dimen/widget_padding"
                android:layout_marginTop="@dimen/widget_padding">

                <com.mcxtzhang.indexlib.IndexBar.widget.IndexBar
                    android:id="@+id/indexBar"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    app:indexBarPressBackground="@color/translucent"
                    app:indexBarTextSize="16sp"
                    />

            </ScrollView>
        </RelativeLayout>
        <TextView
            android:id="@+id/tvSideBarHint"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_side_bar_bg"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="48sp"
            android:text="A"
            android:visibility="gone"/>
</RelativeLayout>
</LinearLayout>
